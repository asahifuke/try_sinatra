<div>
  <input style='width: 100%; margin-bottom: 15px;' type="text" name="title" value=<%= @memo.title %>>
</div>

<div>
  <textarea style='height: 300px; width: 100%; margin-bottom: 15px;' type="text-area" name="body"><%= @memo.body %></textarea>
</div>

